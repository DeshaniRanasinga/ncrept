<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/carbonfiberhome1"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


        <TabHost
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabHost"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:background="#444444"
                    android:layout_height="wrap_content"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/scrollView" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:paddingBottom="0dp"
                                    android:gravity="center">

                                    <Button
                                        android:layout_width="300dp"
                                        android:layout_height="300dp"
                                        android:background="@drawable/draw_genkey"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/genkey" />

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:ems="10"
                                        android:id="@+id/keyName"
                                        android:background="@drawable/textfeild"
                                        android:hint="Enter Key Name"
                                        android:layout_margin="10dp"
                                        android:padding="10dp"
                                        android:layout_below="@+id/encrypt1" />

                                    <Spinner
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:entries="@array/key_size"
                                        android:prompt="@string/key_promt"
                                        android:layout_margin="10dp"
                                        android:padding="10dp"
                                        android:background="#ffffff"
                                        android:id="@+id/keySizeSpinner" />

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/textfeild"
                                        android:id="@+id/destinationbt"
                                        android:layout_margin="10dp"
                                        android:padding="10dp"
                                        android:hint="Destination" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="40dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingTop="0dp"
                                    android:padding="10dp"
                                    android:gravity="center">

                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/scrollView2" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:gravity="center">
                                    <Button
                                        android:layout_width="300dp"
                                        android:layout_height="300dp"
                                        android:text=""
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:id="@+id/encryptBt"
                                        android:background="@drawable/encry_drw" />

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/destinationIp"
                                        android:layout_weight="0.23"
                                        android:background="@drawable/textfeild"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:hint="Destination Ip" />

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/encryptKeyName"
                                        android:layout_weight="0.23"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/textfeild"
                                        android:hint="Key Name" />

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.23"
                                        android:hint="Choose Image"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:focusable="false"
                                        android:background="@drawable/textfeild"
                                        android:id="@+id/chooseImage" />

                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/scrollView3" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:gravity="center">
                                    <Button
                                        android:layout_width="300dp"
                                        android:layout_height="300dp"
                                        android:text=""
                                        android:id="@+id/decryptBt"
                                        android:background="@drawable/draw_decrypt" />
                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/keyNameForDecryption"
                                        android:layout_weight="0.23"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/textfeild"
                                        android:hint="Key Name" />

                                    <ImageView
                                        android:id="@+id/imgView2"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />


                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/scrollView4" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:gravity="center">

                                    <Button


                                        android:layout_width="300dp"
                                        android:layout_height="300dp"
                                        android:background="@drawable/draw_listenkey"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/listenButton" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:id="@+id/myIp"
                                        android:background="@drawable/textfeild"
                                        android:text="Your Ip"
                                        android:layout_margin="10dp"
                                        android:padding="10dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="40dp"
                                    android:padding="10dp"
                                    android:gravity="center">


                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>


</LinearLayout>
